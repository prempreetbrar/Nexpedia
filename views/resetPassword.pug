extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Reset your password
            form.form.form-user-password-reset
                .form__group
                    label.form__label(for='password') New password
                    input#password-new-reset.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-lg
                    label.form__label(for='password-confirm') Confirm password
                    input#password-confirm-reset.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button#password-reset-btn.btn.btn--green Reset
                if token 
                  p.hidden= token